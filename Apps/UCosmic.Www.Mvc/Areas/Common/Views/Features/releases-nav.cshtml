@using UCosmic.Www.Mvc.Areas.Common.Models.Features
@using UCosmic.Www.Mvc.Models
@model IEnumerable<FeaturePreview>
<p>
    To provide feedback on current and future UCosmic features, please visit our
    @Html.Partial(MVC.Shared.Views.uservoice_link, new UserVoiceLink(Request, ViewData) { Text = "Feedback & Support forum", Dialog = "close", TextAfter = "." })
</p>
<p>
    For more information about the UCosmic software project, please visit the <a href="http://www.ucosmic.org">
        UCosmic Consortium at www.ucosmic.org</a>.
</p>
<p>
    <a href="#" class="others">View features for other previews</a>
</p>
<ul class="others no-display">
    @foreach (var previewFeature in Model)
    {
        <li>
            @if (previewFeature.IsCurrentlyViewed)
            {
                <span>@previewFeature.Name</span>
            }
            else
            {
                <a href="@Url.Action(MVC.Common.Features.Releases(previewFeature.Version))">@previewFeature.Name</a>
            }
            @if (previewFeature.IsLatest)
            {
                <span class="is-new">New!</span>
            }
        </li>
    }
</ul>
