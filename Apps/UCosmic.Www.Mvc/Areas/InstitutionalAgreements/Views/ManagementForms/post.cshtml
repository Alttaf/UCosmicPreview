@using UCosmic.Www.Mvc.Areas.InstitutionalAgreements.Models.ManagementForms
@model InstitutionalAgreementForm
@{
    Layout = (ViewBag.NullLayout == null) ? Layout : null;
    ViewBag.Title = Model.IsNew ? "Add a new institutional agreement" : "Edit institutional agreement";
}
@section Styles {
    <link href="@Url.Content(Links.content.jquery_bubblepopup_v2_3_1_css)" rel="stylesheet" />
    @Html.Partial(MVC.InstitutionalAgreements.ManagementForms.Views.form_custom_css)
}
@section Scripts {
    <script src="@Url.Content(Links.scripts.jquery_simplemodal_1_4_1_js)" type="text/javascript"></script>
    <script src="@Url.Content(Links.scripts.jquery_bubblepopup_v2_3_1_min_js)" type="text/javascript"></script>
}
<h2>
    @ViewBag.Title
</h2>
@using (Html.BeginForm(
    MVC.InstitutionalAgreements.ManagementForms.ActionNames.Post, 
    MVC.InstitutionalAgreements.ManagementForms.Name,
    new
    {
        httpMethod = "POST"
    },
    FormMethod.Post,
    new
    {
        enctype = "multipart/form-data", 
        @class = "institutional-agreement"
    }
))
{
    @Html.EditorForModel()
}
