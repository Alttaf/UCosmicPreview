@using UCosmic.Www.Mvc.Areas.My.Models
@model EmployeeOrStudentAffiliate

<div class="institution-radios field">
    <div class="messages push-down">
        @Html.ValidationMessageFor(m => m)
    </div>
    <div>
        <label class="institution-radio">
                @Html.RadioButtonFor(m => m, EmployeeOrStudentAffiliate.EmployeeOnly)
            I am an employee.
        </label>
    </div>
    <div>
        <label class="institution-radio">
                @Html.RadioButtonFor(m => m, EmployeeOrStudentAffiliate.StudentOnly)
            I am a student.
        </label>
    </div>
    <div class="is-student">
        <label class="institution-radio">
                @Html.RadioButtonFor(m => m, EmployeeOrStudentAffiliate.Both)
            I am both an employee and a student.
        </label>
    </div>
    <div>
        <label class="institution-radio">
                @Html.RadioButtonFor(m => m, EmployeeOrStudentAffiliate.Neither)
            I am neither an employee nor a student.
        </label>
    </div>
</div>
