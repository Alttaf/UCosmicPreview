@using UCosmic.Www.Mvc.Areas.Identity.Mappers
@using UCosmic.Www.Mvc.Areas.Identity.Models.SignUp
@model OldSendEmailForm
@{
    ViewBag.Title = "Sign up";
    Layout = MVC.Shared.Views.layout;
}
@section Scripts
{

    <script src="@Links.scripts.identity.sign_up_send_email_form_js" type="text/javascript"></script>

}
<div class="wrap-960 split-form">
    <div class="left">
        @using (Html.BeginForm(MVC.Identity.OldSignUp.SendEmail()))
        {
            <fieldset>
                <legend>Email Eligibility</legend>
                @Html.AntiForgeryToken(OldSignUpRouteMapper.SendEmail.Route)
                @Html.EditorForModel()
            </fieldset>
        }
    </div>
    <div class="right">
        <ol class="p br flush-left">
            <li>Enter your email address in the text box on the left.</li>
            <li>Click the <strong>Check Eligibility</strong> button to find out if you're eligible.
                All you need is an email address corresponding to a UCosmic Consortium membership.</li>
            <li>If you are eligible, click the <strong>Send Confirmation Email</strong> button.</li>
            <li>Check your email for a message from UCosmic with a secret code you can use to confirm
                your address.</li>
            <li>After confirming, you will be able to create a password and sign in.</li>
        </ol>
        <p>
            You must confirm your email address within two (2) hours of signing up, or your
            secret code will expire and you will have to sign up again.
        </p>
    </div>
</div>
